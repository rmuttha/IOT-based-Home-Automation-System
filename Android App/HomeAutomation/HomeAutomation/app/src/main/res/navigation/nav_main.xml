        tools:layout="@layout/fragment_bedroom" >
        <action
            android:id="@+id/action_bedroom_to_homepage"
            app:destination="@id/homepage" />
    </fragment>
    <fragment
        android:id="@+id/garden"
        android:name="com.example.homeautomation.garden"
        android:label="fragment_garden"
        tools:layout="@layout/fragment_garden" >
        <action
            android:id="@+id/action_garden_to_homepage"
            app:destination="@id/homepage" />
