        android:id="@+id/initialpage"
        android:name="com.example.homeautomation.initialpage"
        android:label="fragment_initial"
        tools:layout="@layout/fragment_initialpage" >
        <action
            android:id="@+id/action_initialpage_to_homepage"
            app:destination="@id/homepage" />
