<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/initialpage">

    <fragment
        android:id="@+id/homepage"
        android:name="com.example.homeautomation.Homepage"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_homepage_to_livingroom"
            app:destination="@id/livingroom" />
        <action
            android:id="@+id/action_homepage_to_bedroom"
            app:destination="@id/bedroom" />
        <action
            android:id="@+id/action_homepage_to_garage"
            app:destination="@id/garage" />
        <action
            android:id="@+id/action_homepage_to_kitchen"
            app:destination="@id/kitchen" />
        <action
            android:id="@+id/action_homepage_to_garden"
            app:destination="@id/garden" />
        <action
            android:id="@+id/action_homepage_to_initialpage"
            app:destination="@id/initialpage" />
    </fragment>
    <fragment
        android:id="@+id/garage"
        android:name="com.example.homeautomation.garage"
        android:label="fragment_garage"
        tools:layout="@layout/fragment_garage" >
        <action
            android:id="@+id/action_garage_to_homepage"
            app:destination="@id/homepage" />
    </fragment>
    <fragment
        android:id="@+id/kitchen"
        android:name="com.example.homeautomation.kitchen"
